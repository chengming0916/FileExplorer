                ExecuteDelegate =
                (x) =>
                {
                    if (CurrentBrowserViewModel != null)
                        CurrentBrowserViewModel.Refresh();
                }
            };

            //SimpleRoutedCommand.RegisterClass(typeof(Explorer2), _refreshCommand);
        }

