<Window x:Class="Explorer2TestProj.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc="http://www.quickzip.org/UserControls"        
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/QuickZip.UserControls;component/Themes/Brushes.xaml" />
                <ResourceDictionary Source="pack://application:,,,/QuickZip.UserControls.Explorer;component/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <uc:Explorer2 x:Name="explr" 
                  Style="{DynamicResource qz_Explorer_Style}"
                  Background="{Binding Background, ElementName=mainWindow}" >       
    </uc:Explorer2>
</Window>
