<Window x:Class="TestApp.WPF.AppView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.caliburnproject.org">

	<Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
            <Button x:Name="Load" Content="Load" Height="50" />
            <ComboBox SelectedValue="{Binding FileListModel.ViewMode}" x:Name="ViewModes">                
            </ComboBox>            
            <Slider Value="{Binding FileListModel.ItemSize, Mode=TwoWay}" Minimum="30" Maximum="120" />
        </StackPanel>
        <ContentControl Grid.Column="1" Name="FileListModel" Margin="10" />
    </Grid>

</Window>